# Exclude everything in the target directory except JAR files
**/target/*
!**/target/*.jar

# Allow Maven wrapper jar
!.mvn/wrapper/maven-wrapper.jar

# Ensure src directories are not ignored
!**/src/main/**/target/
!**/src/test/**/target/

# IDE-specific ignores
### STS ###
.apt_generated
.classpath
.factorypath
.project
.settings
.springBeans
.sts4-cache

### IntelliJ IDEA ###
.idea
*.iws
*.iml
*.ipr

### NetBeans ###
/nbproject/private/
/nbbuild/
/dist/
/nbdist/
/.nb-gradle/
build/
!**/src/main/**/build/
!**/src/test/**/build/

